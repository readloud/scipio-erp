        <security https="true" auth="false"/>
        <event type="java" path="org.ofbiz.common.CommonEvents" invoke="setSessionTimeZone"/>
        <response name="success" type="view-last" value="main"/>
        <response name="error" type="request" value="main"/>
    </request-map>
    -->


