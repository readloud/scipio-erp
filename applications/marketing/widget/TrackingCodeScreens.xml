                                    <platform-specific><html><html-template location="component://marketing/webapp/marketing/tracking/listTrackingCode.ftl"/></html></platform-specific>
                                </container>
                            </container>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
