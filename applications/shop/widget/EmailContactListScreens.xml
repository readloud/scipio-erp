                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="ContactListEmailTemplate">
        <section>
            <actions>
                <entity-one entity-name="ContactList" value-field="contactList"/>
                <entity-one entity-name="PartyNameView" value-field="partyName"/>
